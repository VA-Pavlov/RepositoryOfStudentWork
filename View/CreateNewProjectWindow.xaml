<Window x:Class="DPKPApp.View.CreateNewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPKPApp.View"
        mc:Ignorable="d"
        Title="Добавление нового учебного проекта" Height="500" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>

    <StackPanel Margin="20">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0"
                       Text="Название проекта:"
                       Margin="5,5,5,0" VerticalAlignment="Top"/>
            <TextBox Grid.Column="1" Grid.Row="0"/>

            <TextBlock Grid.Column="0" Grid.Row="1"
                       Text="Тип:"
                       Margin="5,5,5,0" VerticalAlignment="Top"/>
            <ComboBox Grid.Column="1" Grid.Row="1">
                <ComboBoxItem Content="Дипломный проект"/>
                <ComboBoxItem Content="Курсовая работа"/>
            </ComboBox>

                <!--тут должен быть студент-->
            <TextBlock Grid.Column="0" Grid.Row="2"
                       Text="ФИО студента:"
                       Margin="5,5,5,0" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" Grid.Row="2"/>

                <!--тут должен быть препод-->
            <TextBlock Grid.Column="0" Grid.Row="3"
                       Text="ФИО дипломного руководителя:"
                       Margin="5,5,5,0" VerticalAlignment="Top"/>
            <TextBox Grid.Column="1" Grid.Row="3"/>

            <TextBlock Grid.Column="0" Grid.Row="4"/>
            <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
                <TextBox x:Name="FilePathTextBox" Width="300" IsReadOnly="True"/>
                <Button Content="Обзор..." Click="BrouseButton_Click"/>
            </StackPanel>

            <TextBlock Grid.Column="0" Grid.Row="5"
                           Text="Оценка:"
                           Margin="5,5,5,0" VerticalAlignment="Top"/>
            <ComboBox Grid.Column="1" Grid.Row="5">
                <ComboBoxItem Content="Нет оценки"/>
                <ComboBoxItem Content="Отлично"/>
                <ComboBoxItem Content="Хорошо"/>
                <ComboBoxItem Content="Удовлетворительно"/>
                <ComboBoxItem Content="Неудовлетворительно"/>
            </ComboBox>
            <TextBlock Grid.Column="0" Grid.Row="6"
                       Text="Описание:"
                       Margin="5,5,5,0" VerticalAlignment="Top"/>
            <TextBox Grid.Column="1" Grid.Row="6"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Height="60"/>
            <TextBlock Grid.Column="0" Grid.Row="7"
                       Text="Комментарий:"
                       Margin="5,5,5,0" VerticalAlignment="Top"/>
            <TextBox Grid.Column="1" Grid.Row="7"
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Height="60"/>
            <StackPanel Grid.ColumnSpan="2" Grid.Row="8"
                        Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить"
                        Click="SaveNewProjectButton_Click"/>
                <Button Content="Отмена"
                        Click="CancellationButton_Click"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
