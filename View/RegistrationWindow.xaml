<Window x:Class="DPKPApp.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPKPApp.View"
        mc:Ignorable="d"
        Title="Регистрация" Height="500" Width="400"
        Icon="/Data/Images/Logo.png"
        Background="#005086" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Регистрация"
                   Foreground="White"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Логин:"
                   Foreground="White"
                   Margin="0,10,0,0"
                   Grid.Row="1"/>
        <TextBox x:Name="txtLogin"
                 Grid.Column="1"
                 Grid.Row="1"
                 Margin="10,10,0,0"
                 Background="White"
                 BorderBrush="#005086"
                 BorderThickness="1"
                 Padding="5"/>

        <TextBlock Text="Пароль:"
                   Foreground="White"
                   Margin="0,10,0,0"
                   Grid.Row="2"/>
        <PasswordBox x:Name="txtPassword"
                     Grid.Column="1"
                     Grid.Row="2"
                     Margin="10,10,0,0"
                     Background="White"
                     BorderBrush="#005086"
                     BorderThickness="1"
                     Padding="5"/>

        <TextBlock Text="Подтверждение пароля:"
                   Foreground="White"
                   Margin="0,10,0,0"
                   Grid.Row="3"/>
        <PasswordBox x:Name="txtConfirmPassword"
                     Grid.Column="1"
                     Grid.Row="3"
                     Margin="10,10,0,0"
                     Background="White"
                     BorderBrush="#005086"
                     BorderThickness="1"
                     Padding="5"/>

        <TextBlock Text="Фамилия:"
                   Foreground="White"
                   Margin="0,10,0,0"
                   Grid.Row="4"/>
        <TextBox x:Name="txtLastName"
                 Grid.Column="1"
                 Grid.Row="4"
                 Margin="10,10,0,0"
                 Background="White"
                 BorderBrush="#005086"
                 BorderThickness="1"
                 Padding="5"/>

        <TextBlock Text="Имя:"
                   Foreground="White"
                   Margin="0,10,0,0"
                   Grid.Row="5"/>
        <TextBox x:Name="txtFirstName"
                 Grid.Column="1"
                 Grid.Row="5"
                 Margin="10,10,0,0"
                 Background="White"
                 BorderBrush="#005086"
                 BorderThickness="1"
                 Padding="5"/>

        <TextBlock Text="Отчество:"
                   Foreground="White"
                   Margin="0,10,0,0"
                   Grid.Row="6"/>
        <TextBox x:Name="txtMiddleName"
                 Grid.Column="1"
                 Grid.Row="6"
                 Margin="10,10,0,0"
                 Background="White"
                 BorderBrush="#005086"
                 BorderThickness="1"
                 Padding="5"/>

        <StackPanel Grid.ColumnSpan="2"
                    Grid.Row="7"
                    Margin="0,10">
            <Button
                    Content="Сохранить"
                    Foreground="#005086"
                    Background="White"
                    Padding="60,5"
                    HorizontalAlignment="Center" Click="CreateUser_Click"/>
            <Button
                Margin="0,10"
                Content="Вернуться"
                Foreground="#005086"
                Background="White"
                Padding="60,5"
                HorizontalAlignment="Center" Click="Button_Click"/>
            <Image Source="/Data/Images/Logo.png" 
       Width="100" 
       Height="50" 
       HorizontalAlignment="Center"
       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>